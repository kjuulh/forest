{
  "env": "dev",
  "destination": "eu-west-1.*",
  "destination_type": "forest/terraform@1",
  "component": {
    "namespace": "forest-contrib",
    "name": "rust-persistent-service",
    "source": {
      "Local": "../../components/forest-contrib/rust_persistent_service"
    }
  },
  "config": {
    "environment": [
      {
        "value": "my_service=debug,info",
        "key": "RUST_LOG"
      },
      {
        "key": "RUST_LOG",
        "value": "debug"
      }
    ],
    "ports": [
      {
        "port": 3000,
        "name": "external",
        "external": true
      },
      {
        "name": "internal",
        "port": 3001
      },
      {
        "port": 4000,
        "external": true,
        "name": "grpc_external",
        "subdomain": "grpc"
      },
      {
        "port": 4001,
        "name": "grpc_internal"
      }
    ],
    "name": "service-example",
    "replicas": 3,
    "health_checks": {
      "live": {
        "http": {
          "port": 3001,
          "path": "/"
        }
      }
    }
  }
}